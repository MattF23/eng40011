import paho.mqtt.client as mqtt
import json

# ---------------- MQTT Broker Info ----------------
BROKER = "rule28.i4t.swin.edu.au"   # Your MQTT broker
PORT = 1883
TOPIC = "studentID/pi/expressions"  # Replace with your topic
USERNAME = "your_student_id"        # Replace with your student ID
PASSWORD = "your_student_id"        # Replace with your student ID

# ---------------- MQTT Callbacks ----------------
def on_connect(client, userdata, flags, rc):
    """Called when the client connects to the broker."""
    if rc == 0:
        print("Connected successfully!")
        client.subscribe(TOPIC)
    else:
        print("Connection failed with code", rc)

def on_message(client, userdata, msg):
    """Called when a message is received."""
    try:
        data = json.loads(msg.payload.decode())
        print("Received data:", data)
        print("Dominant expression:", data.get("expression"))
    except Exception as e:
        print("Error decoding message:", e)

# ---------------- MQTT Client Setup ----------------
client = mqtt.Client()
client.username_pw_set(USERNAME, PASSWORD)
client.on_connect = on_connect
client.on_message = on_message

# Connect to the broker
client.connect(BROKER, PORT, 60)

# Blocking loop to keep client running
client.loop_forever()
